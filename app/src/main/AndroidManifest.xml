<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appsomniac.showbox">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/PopMovies">
        <activity
            android:name="com.appsomniac.showbox.base.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PopMovies">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appsomniac.showbox.base.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/PopMovies" />
        <activity
            android:name="com.appsomniac.showbox.activity.more.more.MoreActivity"
            android:label="@string/title_activity_more"
            android:theme="@style/PopMovies" />
        <activity android:name="com.appsomniac.showbox.activity.more.singleMovie.SingleMovieActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name="com.appsomniac.showbox.activity.more.LoginActivity" />
        <activity android:name="com.appsomniac.showbox.activity.more.SignUpActivity" />
        <activity android:name="com.appsomniac.showbox.activity.more.ResetPasswordActivity"></activity>
    </application>

</manifest>